# GitHub Webhook
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here
GITHUB_TOKEN=

# Repository
REPO_SSH_URL=git@github.com:dabom/devom.git

# Paths
WORK_DIR=/tmp/deploy/workspace
CACHE_DIR=/tmp/deploy/cache
LOG_DIR=/tmp/deploy/logs

# Domain
BASE_DOMAIN=devom.dev
DEFAULT_BRANCH=master

# Filtering
ALLOWED_BRANCH_REGEX=^(feature|fix|hotfix|master|main).*$

# Server
PORT=3000
BUILD_TIMEOUT=600000
MAX_CONCURRENT_BUILDS=3

# Docker
REGISTRY=
DOCKER_NETWORK_NAME=deploy-network

# Notifications (optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
