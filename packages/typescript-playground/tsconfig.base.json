{
  "compilerOptions": {
    "target": "esnext", // Typescript가 변환할 Javascript 버전을 지정.
    "module": "esnext", // 모듈 시스템을 ESNext 표준 방식(ESM)으로 설정. 
    "moduleResolution": "node", // import 경로를 Node.js의 모듈 해석 방식으로 처리하도록 설정.
    "outDir": "./dist", // Typescript 파일(.ts)을 Javascript로 변환할 결과물을 저장할 디렉토리.
    "rootDir": "./src", // 소스파일의 루트 디렉토리 지정
    "baseUrl": ".", // 모듈 경로의 기준을 현재 디렉토리(.)로 설정.
    "esModuleInterop": true, // esModule의 기본 가져오기 지원.
    "forceConsistentCasingInFileNames": true, // 파일 경로 대소문자 일관성을 강제하여 OS 간 문제 방지.
    "strict": true, // Typescript의 엄격한 타입 검사를 활성화
    "skipLibCheck": true, // node_modules에 있는 .d.ts 파일에 대한 타입 검사 건너뜀 (컴파일 속도 향상)
    "allowJs": false, // .js 파일도 Type
    "resolveJsonModule": true, // .json 파일도 import 할 수 있도록 허용
    "noEmit": false // .ts 파일을 .js로 변환하여 출력할지 여부 (false이면 컴파일 결과 생성)
  },
  "include": [
    "./src"
  ]
}